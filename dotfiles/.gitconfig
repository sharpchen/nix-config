[user]
    name = sharpchen
    email = rui.chen.sharp@gmail.com
[init]
    defaultBranch = main
[url "git@github.com:"]
    insteadOf = https://github.com/
[pull]
    rebase = true
[includeIf "gitdir:C:/**"]
    path = ~/.gitconfig_windows
[includeIf "gitdir:D:/**"]
    path = ~/.gitconfig_windows

[rebase]
    autoStash = true ; stash all local changes if exists on rebasing

[diff]
    context = 3
    renames = copies
    interHunkContext = 10

[pager]
    diff = diff-so-fancy | $PAGER
[diff-so-fancy]
    markEmptyLines = false

